rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // User profile images
    match /users/{userId}/profile/{fileName} {
      // Anyone can read profile images
      allow read: if true;

      // Only the user can upload/update their profile image
      allow write: if isAuthenticated() && isOwner(userId) &&
                      request.resource.size < 5 * 1024 * 1024 && // 5MB limit
                      request.resource.contentType.matches('image/.*');
    }

    // Message images
    match /messages/{messageId}/{fileName} {
      // Authenticated users can read message images
      allow read: if isAuthenticated();

      // Authenticated users can upload message images
      allow write: if isAuthenticated() &&
                      request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                      request.resource.contentType.matches('image/.*');
    }

    // Comment images
    match /comments/{messageId}/{fileName} {
      // Authenticated users can read comment images
      allow read: if isAuthenticated();

      // Authenticated users can upload comment images
      allow write: if isAuthenticated() &&
                      request.resource.size < 5 * 1024 * 1024 && // 5MB limit
                      request.resource.contentType.matches('image/.*');
    }

    // DM attachments
    match /dm_attachments/{conversationId}/{fileName} {
      // Helper to check if user is conversation participant based on ID pattern
      function isConversationParticipant() {
        return conversationId.split('_')[0] == request.auth.uid ||
               conversationId.split('_')[1] == request.auth.uid;
      }

      // Only conversation participants can read attachments
      allow read: if isAuthenticated() && isConversationParticipant();

      // Only conversation participants can upload attachments
      allow write: if isAuthenticated() &&
                      isConversationParticipant() &&
                      request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                      (request.resource.contentType.matches('image/.*') ||
                       request.resource.contentType.matches('application/pdf'));
    }

    // Incident photos (for map)
    match /incidents/{incidentId}/{fileName} {
      // Anyone authenticated can read
      allow read: if isAuthenticated();

      // Authenticated users can upload
      allow write: if isAuthenticated() &&
                      request.resource.size < 5 * 1024 * 1024 && // 5MB limit
                      request.resource.contentType.matches('image/.*');
    }

    // Advertiser logos
    match /advertisers/{advertiserId}/logo/{fileName} {
      // Anyone can read advertiser logos
      allow read: if true;

      // Only admins can upload (verify in app logic)
      allow write: if isAuthenticated() &&
                      request.resource.size < 2 * 1024 * 1024 && // 2MB limit
                      request.resource.contentType.matches('image/.*');
    }

    // Ad images
    match /ads/{adId}/{fileName} {
      // Anyone can read ad images
      allow read: if true;

      // Only admins can upload (verify in app logic)
      allow write: if isAuthenticated() &&
                      request.resource.size < 5 * 1024 * 1024 && // 5MB limit
                      request.resource.contentType.matches('image/.*');
    }
  }
}
